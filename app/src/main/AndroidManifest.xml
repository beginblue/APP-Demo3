<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="exercises.blue.demoagain">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".singleActivities.welcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActvity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".singleActivities.dianming">
        </activity>
        <activity android:name=".singleActivities.publishActivity">
        </activity>
        <activity android:name=".CollectionActivity.Collection">
        </activity>
        <activity
            android:name=".CollectionActivity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".BeautyGallery.BeautyCards"
            android:label="@string/title_activity_beauty_cards"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>